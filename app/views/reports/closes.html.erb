<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
  <!--begin::Toolbar container-->
  <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
    <!--begin::Page title-->
    <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
      <!--begin::Title-->
      <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Cierres de mes</h1>
      <!--end::Title-->
      <!--begin::Breadcrumb-->
      <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
        <!--begin::Item-->
        <li class="breadcrumb-item text-muted">
          <a href="#" class="text-muted text-hover-primary">Administración</a>
        </li>
        <!--end::Item-->
      </ul>
      <!--end::Breadcrumb-->
    </div>
    <!--end::Page title-->
  </div>
  <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
  <!--begin::Content container-->
  <div id="kt_app_content_container" class="app-container container-xxl">
    <!--begin::Navbar-->
    <div class="card mb-5 mb-xl-10">
      <div class="card-body pt-9 pb-0">
        <!--begin::Details-->
        <div class="d-flex flex-wrap flex-sm-nowrap">
          <!--begin::Info-->
          <div class="flex-grow-1">
            <!--begin::Title-->
            <div class="d-flex justify-content-between align-items-start flex-wrap mb-2">
              <!--begin::User-->
              <div class="d-flex flex-column">
                <!--begin::Name-->
                <div class="d-flex align-items-center mb-2">
                  <a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">Akymbo Café Narvarte</a>
                </div>
                <!--end::Name-->
              </div>
              <!--end::User-->
            </div>
            <!--end::Title-->
            <!--begin::Stats-->
            <div class="d-flex flex-wrap flex-stack">
              <!--begin::Wrapper-->
              <div class="d-flex flex-column flex-grow-1 pe-8">
                <!--begin::Table-->
                <table class="table align-middle table-row-dashed fs-6 gy-5 mb-0" id="kt_permissions_table">
                  <thead>
                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                      <th class="">Fecha</th>
                      <th class="">Efectivo</th>
                      <th class="">Tarjeta</th>
                      <th class="">Transferencia</th>
                      <th class="">Gastos Efectivo</th>
                      <th class="">Differencia Reportada</th>
                      <th class="">Ingreso real</th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody class="fw-semibold text-gray-600">
                    <% @closes.each do |close| %>
                    <tr>
                      <td>
                        <%= close.date %>
                      </td>
                      <td>
                        <%= number_to_currency(close.cash_total) %>
                      </td>
                      <td>
                        <%= number_to_currency(close.card_total) %>
                      </td>
                      <td>
                        <%= number_to_currency(close.transfer_total) %>
                      </td>
                      <td>
                        <%= number_to_currency(close.cash_expenses) %>
                      </td>
                      <td class="fw-bold fs-6 <%= close.reported_difference >= 0 ? "text-success" : "text-danger" %>">
                        <%= number_to_currency(close.reported_difference) %>
                      </td>
                      <td class="text-dark fw-bold fs-6">
                        <%= number_to_currency(close.real_total) %>
                      </td>
                      <td class="text-end">
                        <%= link_to daily_report_reports_path(date: close.date), class: "btn btn-icon btn-bg-light btn-active-color-primary btn-sm me-1" do %>
                        <i class="ki-duotone ki-eye fs-2">
                          <span class="path1"></span>
                          <span class="path2"></span>
                          <span class="path3"></span>
                        </i>
                        <% end %>
                      </td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <!--end::Table-->
              </div>
              <!--end::Wrapper-->
            </div>
            <!--end::Stats-->
          </div>
          <!--end::Info-->
        </div>
        <!--end::Details-->
      </div>
    </div>
    <!--end::Navbar-->
  </div>
  <!--end::Content container-->
</div>
<!--end::Content-->
