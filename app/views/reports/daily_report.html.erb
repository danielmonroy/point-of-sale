                  <!--begin::Stat-->
                  <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-6 mb-3">
                    <!--begin::Number-->
                    <div class="d-flex align-items-center">
                      <div class="fs-2 fw-bold" data-kt-countup="true" data-kt-countup-value="<%= @close.card_total %>" data-kt-countup-prefix="$">0</div>
