<!--begin::Modal - New Report-->
<div class="modal fade" id="kt_modal_new_close" tabindex="-1" aria-hidden="true">
  <!--begin::Modal dialog-->
  <div class="modal-dialog modal-dialog-centered mw-650px">
    <!--begin::Modal content-->
    <div class="modal-content">
      <!--begin::Form-->
      <%= form_with scope: :close, url: "/reports/daily_close", method: :post do |form| %>
        <!--begin::Modal header-->
        <div class="modal-header" id="kt_modal_new_provider_header">
          <!--begin::Modal title-->
          <h2>Generar Cierre de Venta</h2>
          <!--end::Modal title-->
          <!--begin::Close-->
          <div class="btn btn-sm btn-icon btn-active-color-primary" data-bs-dismiss="modal">
            <i class="ki-duotone ki-cross fs-1">
              <span class="path1"></span>
              <span class="path2"></span>
            </i>
          </div>
          <!--end::Close-->
        </div>
        <!--end::Modal header-->
        <!--begin::Modal body-->
        <div class="modal-body py-10 px-lg-17">
          <!--begin::Scroll-->
          <div class="scroll-y me-n7 pe-7" id="kt_modal_new_item_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_new_item_header" data-kt-scroll-wrappers="#kt_modal_new_item_scroll" data-kt-scroll-offset="300px">
            <!--begin::Input group-->
            <div class="d-flex flex-column mb-5 fv-row">
              <!--begin::Label-->
              <label class="required fs-5 fw-semibold mb-2">Total en tarjeta</label>
              <!--end::Label-->
              <!--begin::Input-->
              <%= form.number_field :card_total, class: "form-control form-control-solid" %>
              <!--end::Input-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="d-flex flex-column mb-5 fv-row">
              <!--begin::Label-->
              <label class="required fs-5 fw-semibold mb-2">Total en efectivo</label>
              <!--end::Label-->
              <!--begin::Input-->
              <%= form.number_field :cash_total, class: "form-control form-control-solid" %>
              <!--end::Input-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="d-flex flex-column mb-5 fv-row">
              <!--begin::Label-->
              <label class="required fs-5 fw-semibold mb-2">Total en transferencia</label>
              <!--end::Label-->
              <!--begin::Input-->
              <%= form.number_field :transfer_total, class: "form-control form-control-solid" %>
              <!--end::Input-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="d-flex flex-column mb-5 fv-row">
              <!--begin::Label-->
              <label class="required fs-5 fw-semibold mb-2">Gastos en efectivo</label>
              <!--end::Label-->
              <!--begin::Input-->
              <%= form.number_field :cash_expenses, class: "form-control form-control-solid" %>
              <!--end::Input-->
            </div>
            <!--end::Input group-->
            <!--begin::Input group-->
            <div class="d-flex flex-column mb-5 fv-row">
              <!--begin::Label-->
              <label class="required fs-5 fw-semibold mb-2">Comentarios</label>
              <!--end::Label-->
              <!--begin::Input-->
              <%= form.text_area :comments, class: "form-control form-control-solid" %>
              <!--end::Input-->
            </div>
            <!--end::Input group-->
            <%= form.hidden_field :date, value: @date %>
          </div>
          <!--end::Scroll-->
        </div>
        <!--end::Modal body-->
        <!--begin::Modal footer-->
        <div class="modal-footer flex-center">
          <!--begin::Button-->
          <button type="reset" id="kt_modal_new_item_cancel" class="btn btn-light me-3" data-bs-dismiss="modal">Cancelar</button>
          <!--end::Button-->
          <!--begin::Button-->
          <button type="submit" id="kt_modal_new_item_submit" class="btn btn-primary">
            <span>Guardar</span>
          </button>
          <!--end::Button-->
        </div>
        <!--end::Modal footer-->
      <% end %>
      <!--end::Form-->
    </div>
  </div>
</div>
<!--end::Modal - New Report-->
