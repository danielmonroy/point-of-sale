              <div class="d-flex flex-column">
                <!--begin::Name-->
                <div class="d-flex align-items-center mb-2">
                  <a href="#" class="text-gray-900 text-hover-primary fs-2 fw-bold me-1">Reporte de cierre</a>
                </div>
                <!--end::Name-->
              </div>
              <!--end::User-->
              <% unless @close %>
